<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="io.github.idek.terminaluithing.UI.MainViewController"
            prefHeight="400.0" prefWidth="600.0">
    <Label fx:id="consoleOutput" VBox.vgrow="ALWAYS" maxHeight="Infinity">
    </Label>
    <HBox fx:id="suggestionBox">
    </HBox>
    <HBox>
        <Label fx:id="prompt"></Label>
        <TextField fx:id="commandBox" HBox.hgrow="ALWAYS" maxWidth="Infinity"></TextField>
        <Button fx:id="commandSubmit" onAction="#onSubmitButtonClick">Submit</Button>
    </HBox>

</VBox>
